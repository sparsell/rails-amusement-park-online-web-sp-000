
<h2> Welcome to the Amusement Park</h2><br>
<h5>Please signup</h5>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %> <br>

<%= f.label :height %>
  <%= f.number_field :height %> <br>

  <%= f.label :happiness %>
  <%= f.number_field :happiness %><br>
 
  <%= f.label :nausea %>
  <%= f.number_field :nausea %><br>

  <%= f.label :tickets %>
  <%= f.number_field :tickets %><br>

   <%= f.label :password %>
  <%= f.password_field :password %><br>

    <%= f.label :admin, "Are you an Admin?" %>
   <%= f.check_box :admin, options = {:class => "user_admin"} %><br>

    <%= f.submit "Create User" %>
<% end %>